#!/usr/bin/env bash
set -euo pipefail

BASE_DIR="${TEST_PROJECT_ROOT:-$( cd "$( dirname "${BASH_SOURCE[0]}" )" && cd ../.. && pwd )}"
LOG_DIR="$BASE_DIR/logs"
mkdir -p "$LOG_DIR"

if [[ "${1:-}" == "artisan" ]]; then
  shift
  action=${1:-}
  echo "php artisan $action $*" >>"$LOG_DIR/php-artisan.log"
  exit 0
fi

echo "php $*" >>"$LOG_DIR/php.log"
exit 0
